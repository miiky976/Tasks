<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Task" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/system_accent1_200</item>
        <item name="colorPrimaryVariant">@android:color/system_accent1_500</item>
        <item name="colorPrimarySurface">@android:color/system_neutral1_900</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@android:color/system_accent2_200</item>
        <item name="colorSecondaryVariant">@android:color/system_accent2_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Dialog" parent="Theme.Design.BottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="colorPrimary">@android:color/system_accent1_200</item>
        <item name="colorPrimaryVariant">@android:color/system_accent1_500</item>
        <item name="colorPrimarySurface">@android:color/system_neutral1_900</item>
    </style>
</resources>